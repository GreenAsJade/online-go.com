.DemoBoardModal {
  width: 50rem;
  max-width: 100%;

  .header {
    max-height: 80vh;
    align-items: stretch !important;
  }

  .demo-pane-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: stretch;
  }

  .pane {
    min-width: 49%;
    box-sizing: border-box;

    .control-label {
      width: 10rem;
      word-wrap: break-word;
    }

    .controls {
        width: 10rem;
        display: unset;
    }

    .checkbox-container {
      align-items: center;
    }

    input, select {
        width: 10rem;
    }

    input[type='checkbox'] {
        width: 1rem;
    }
  }

  .left-pane {
    margin-right: 0.5rem;
  }

  .right-pane {
    border-left: 1px solid transparent;
    themed: border-color shade3;
  }

  .header {
    max-height: 80vh;
    align-items: stretch !important;
  }

  label {
    user-select: none;
  }

  @media only screen and (max-width: 768px) {
    .pane {
      width: 100%;

      .control-label {
        width: 50%;
      }
    }

    .left-pane {
      margin-right: 0;
    }

    .right-pane {
      border-left: 0;
    }
  }
 }