.CollectionSharingModal
    .header
        display: flex
        justify-content: space-between
        align-items: center
        padding: 1rem
        themed(border-bottom-color, shade3)
        border-bottom: 1px solid

        h3
            margin: 0
            font-size: 1.2rem

        .close
            background: none
            border: none
            font-size: 1.5rem
            cursor: pointer
            padding: 0
            width: 2rem
            height: 2rem
            display: flex
            align-items: center
            justify-content: center

            &:hover
                themed(background-color, shade5)

    .body
        padding: 1rem
        max-height: 60vh
        overflow-y: auto

        .share-with
            margin-bottom: 2rem

            h4
                margin: 0 0 1rem 0
                font-size: 1.1rem

            .loading
                text-align: center
                padding: 1rem
                themed(color, shade2)

            .empty
                text-align: center
                padding: 1rem
                themed(color, shade2)
                font-style: italic

            .shared-items
                .shared-item
                    display: flex
                    justify-content: space-between
                    align-items: center
                    padding: 0.5rem
                    themed(border-color, shade5)
                    border: 1px solid
                    border-radius: 4px
                    margin-bottom: 0.5rem

                    .name
                        font-weight: 500

                    .remove-btn
                        themed(background, reject)
                        themed(color, colored-background-fg)
                        border: none
                        padding: 0.25rem 0.5rem
                        border-radius: 3px
                        cursor: pointer
                        font-size: 0.9rem

                        &:hover:not(:disabled)
                            themed-darken(background, reject, 10%)

                        &:disabled
                            themed(background, shade3)
                            cursor: not-allowed

        .add-sharing
            h4
                margin: 0 0 1rem 0
                font-size: 1.1rem

            .add-player, .add-group
                display: flex
                gap: 0.5rem
                margin-bottom: 1rem

                input
                    flex: 1
                    padding: 0.5rem
                    themed(border-color, shade3)
                    border: 1px solid
                    border-radius: 4px
                    font-size: 1rem
                    themed(background, input-bg)
                    themed(color, input-fg)

                    &:disabled
                        themed(background-color, shade5)
                        cursor: not-allowed

                button
                    padding: 0.5rem 1rem
                    themed(background, primary)
                    themed(color, colored-background-fg)
                    border: none
                    border-radius: 4px
                    cursor: pointer
                    font-size: 1rem

                    &:hover:not(:disabled)
                        themed-darken(background, primary, 10%)

                    &:disabled
                        themed(background, shade3)
                        cursor: not-allowed
