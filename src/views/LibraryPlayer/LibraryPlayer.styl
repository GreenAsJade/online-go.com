.LibraryPlayer {
    .breadcrumbs {
        display: flex;
        padding: 1rem;
        font-size: font-size-big;

        .breadcrumb {
            cursor: pointer;
            padding-left: 0.5rem;
        }

        .breadcrumb:hover {
            text-decoration: underline;
        }
    }

    .collections {
        cursor: pointer;
        margin-bottom: 1rem;
        display: flex;
        flex-direction: column;
    }

    .collection-header {
        display: flex;
        margin-bottom: 1rem;
        align-items: center;

        .collection-title {
            display: flex;
            justify-content: space-between;

            h3 {
                margin-right: 1rem;
                font-size: font-size-big;
            }
        }
    }

    .Card {
        overflow-x: auto;
    }

    .collections, .games {
        display: table;
    }

    .collection-entry, .game-entry, .sort-header {
        display: table-row;

        span {
            display: table-cell;
            padding-right: 1rem;
        }
    }

    .collection-entry {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.5rem;

        .collection-info {
            display: flex;
            align-items: center;
            flex: 1;
            cursor: pointer;

            span {
                padding-right: 1rem;
            }
        }
    }

    .sort-header {
        font-weight: 700;
    }

    .sortable {
        cursor: pointer;
    }

    .sortable:after {
        display: inline-block;
        width: 0.8rem;
        font-size: 0.7rem;
        margin-left: 0.2rem;
        margin-bottom: 0.2rem;
        font-family: 'FontAwesome';
        content: ' ';
    }

    .sortable.sorted-asc:after {
        content: fa-sort-asc-content;
    }

    .sortable.sorted-desc:after {
        content: fa-sort-desc-content;
    }

    .private-lock {
        // cursor: pointer;
        width: 2rem;
        text-align: center;
    }

    .fa-lock, .fa-unlock {
        cursor: pointer;
    }

    .collection-info:hover {
        text-decoration: underline;
    }

    .date-column {
        min-width: 10rem;
    }

    .collection {
        padding-left: 2rem;
    }

    .collection, .name-column {
        min-width: 12rem;
    }

    .black-column, .white-column {
        min-width: 6rem;
    }

    .outcome-column {
        min-width: 5rem;
    }

    .empty-text {
        text-align: center;
    }

    .new-collection {
        display: flex;
        align-items: flex-start;

        input[type='text'] {
            width: 100%;
            margin: 0.5rem 1rem 0.5rem 0;
        }

        label {
            user-select: none;
        }

        .name-checkbox {
            margin-right: 1rem;

            i {
                margin: 0 0.5rem;
            }
        }

        .private-toggle {
            display: flex;
            align-items: center;
            cursor: pointer;
            margin-left: 1rem;

            &.disabled {
                opacity: 0;
                pointer-events: none;
                cursor: default;
            }

            i {
                margin-right: 0.5rem;
            }
        }
    }

    .share-collection-btn {
        display: flex;
        align-items: center;
        margin-left: 1rem;
        gap: 0.5rem;
        padding: 0;
        padding-right: 0.5rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: font-size-small;
    }

    .upload-button {
        float: right;

        button {
            margin-left: 0.5rem;
        }
    }

}
